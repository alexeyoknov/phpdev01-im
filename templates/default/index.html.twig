{% extends "base.html.twig" %}

{% use "default/leftsidebar.html.twig" %}

{% block title %} Wellcome {% endblock %}

{% block body %}
    {% for category in categories %}
        {% if category.id != "" %}
        <div class="col-md-6">
            <a href={{ path('category', {id:category.id}) }}>
                {% if type == 'nested' %}
                    {% if category.getParent() %}
                        {{ category.getParent().getName() }}/
                    {% endif %}
                {% else %}
                    {% if category.parentName %}
                        {{ category.parentName }}/
                    {% endif %}
                {% endif %}
                
                {{ category.name }}
        
                {% if type == 'nested' %}
                    :lvl-{{ category.lvl }}
                {% else %} 
                    [{{category.productsCount}}]                
                {% endif %}
            </a>

            {{ render(controller(
                'App\\Controller\\DefaultController::getProducts',{'categoryId':category.id}))
            }}
            {#

            
            {% if category.products and category.products|length > 0 %}
            <ul>
                {% for product in category.products %}
                    <li> <a href={{ path('product', {id:product.id}) }}>{{ product.name }}</a> </li>
                {% endfor %}
            </ul>
            
            {% endif %}
            #}
        </div>
        {% endif %}
    {% endfor %} 

{% endblock %}